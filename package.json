{
  "name": "vortex-engine",
  "version": "4.0.0",
  "description": "Vortex USDC Payment Engine - Production Grade Solana blockchain backend for USDC payments, NFT minting, and TOLA incentives",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "node node_modules/typescript/bin/tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "postinstall": "npm rebuild 2>/dev/null; node node_modules/typescript/bin/tsc || echo TypeScript build skipped"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@metaplex-foundation/js": "^0.20.1",
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "bs58": "^5.0.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/body-parser": "^1.19.5"
  },
  "keywords": [
    "solana",
    "usdc",
    "nft",
    "blockchain",
    "payments",
    "tola",
    "vortex"
  ],
  "author": "Marianne Nems <mariannenems@gmail.com>",
  "license": "Proprietary"
}

